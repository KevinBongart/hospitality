<h1>Listing secretaries</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Hospital</th>
    <th>Doctor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @secretaries.each do |secretary| %>
  <tr>
    <td><%= secretary.name %></td>
    <td><%= link_to secretary.hospital.name, secretary.hospital %></td>
    <td><%= link_to secretary.doctor.name, secretary.doctor unless secretary.doctor.blank? %></td>
    <td><%= link_to 'Show', secretary %></td>
    <td><%= link_to 'Edit', edit_secretary_path(secretary) %></td>
    <td><%= link_to 'Destroy', secretary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

